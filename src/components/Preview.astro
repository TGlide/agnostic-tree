---
interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<div class="border bc-gray-10 rounded-[12px] p-12 bg-gray-11">
  <h2 class="flex items-center gap-8">
    <div class={`${icon} text-2xl`} aria-hidden></div>
    <span class="text-2xl font-medium">{title}</span>
  </h2>
  <div
    class="w-full aspect-square h-[400px] bg-gray-12 rounded-[6px] mbs-16 p-8 overflow-y-auto"
  >
    <slot />
  </div>
</div>
